
<h1>{{title}}</h1>

<a class="btn btn-primary" href="/images/random?{{#if random}}&query={{random}}{{/if}}" role="button">Next Random Image</a>

<table class="table table-striped table-hover">
  <tr>
    <th scope="row">Character</th>
    <td id="character" class="editable">{{character}}</td>
  </tr>
  <tr>
    <th scope="row">Emotion</th>
    <td id="emotion" class="editable">{{emotion}}</td>
  </tr>
  <tr>
    <th scope="row">Text</th>
    <td id="text" class="editable">{{text}}</td>
  </tr>
  <tr>
    <th scope="row">Tags</th>
    <td id="tags" class="editable">{{tags}}</td>
  </tr>
  <tr>
    <th scope="row">Comment</th>
    <td id="comments" class="editable">{{comments}}</td>
  </tr>
  <tr>
    <th scope="row">Actions</th>
    <td>
      <div class="btn-group">
        <button type="button" class="btn btn-info" id="editimage" data-id="{{_id}}">Edit</button>
        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deletemodal">Delete</button>
      </div>
    </td>
  </tr>
  <tr>
    <th scope="row">Time Created</th>
    <td>{{created}}</td>
  </tr>
  <tr>
    <th scope="row">Last Updated</th>
    <td>{{updated}}</td>
  </tr>
  <tr>
    <th scope="row">Size (WxH)</th>
    <td>{{width}}x{{height}}</td>
  </tr>
  <tr>
    <th scope="row">Size</th>
    <td>{{size size}}</td>
  </tr>
  <tr>
    <th scope="row">Mime-Type</th>
    <td>{{mimetype}}</td>
  </tr>
  <tr>
    <th scope="row">Hash (MD5)</th>
    <td>{{hash}}</td>
  </tr>
  <tr>
    <th scope="row">Image</th>
    <td>
      <a href="/uploads/{{hash}}.{{extension mimetype}}"><img src="/uploads/{{hash}}.{{extension mimetype}}" /></a>
      </td>
  </tr>
</table>

<div id="deletemodal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Are you sure?</h4>
      </div>
      <div class="modal-body">
        <p>Confirm deletion of this image?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal" id="deleteimage" data-id="{{_id}}">Delete</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>
